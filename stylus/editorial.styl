/* FILE: editorial.styl
 * --------------------
 * Styles for editorials, including editorial sliders
 * and other editorial content
 */


/* Not used but we have them just in case you'd like to
 * use them at some point.
 */

.editorial-slider {}



/* Actually used classes */

.editorial

	.editorial-slide
		max-width 992px

	.editorial-img
		position relative

		img
			/* Make the editorial image take up the whole container */
			display block
			width 100%

	.editorial-text
		background-color transparent
		padding 0 1em

		.sale-logo-container
			color $gray-dark
			font-size 0.8em
			font-family $font--sans-serif
			letter-spacing 2px
			text-transform uppercase

			img
				max-width 25%
				max-height 100px

		.sale-end-info
			color $highlight
			font-size 0.8em

		.editorial-text-title
			font-size 1.3em
			font-family $font--serif
			font-style italic
			font-weight bold
			color $gray-dark

		.editorial-text-content
			color $default
			font-size .8em


.page-salelist
	.editorial
		.editorial-slide
			max-width 600px


/* *************************** *
 * ---- RESPONSIVE STYLES ---- *
 * *************************** *
 */

/* These breakpoints coincide with the slider-defined
 * breakpoints.
 *
 * Hacky, yes.
 * Works, also yes.
 * Proud, no.
 */

@media screen and (min-width: 601px)
	.page-salelist
		.editorial
			.editorial-slide
				opacity 0.1
				transition opacity 0.5s ease

				&.slick-center
					opacity 1

			&.is-single-slide
				.editorial-slide
					float none /* Cancel out slick styles */
					margin-right auto
					margin-left auto
					opacity 1




/* --------------------- *
 * REGULAR MEDIA QUERIES *
 * --------------------- *
 */

@media $mediumScreensQuery
	.editorial
		.editorial-text
			.editorial-text-title
				font-size 2.1em
				line-height 1.1em

			.editorial-text-content
				line-height 1.55em


/* Janky fix for making the editorial image not
 * too big when on sales pages.
 */
@media $largeScreensQuery
	.editorial
		.editorial-text
			padding-left 2em

			.editorial-text-title
				font-size 3.5em
				line-height 1.1em
			.editorial-text-content
				font-size 1em
				line-height 1.9em




