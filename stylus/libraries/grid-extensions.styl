@import 'grid'

/* FILE: grid-extensions.styl
 * --------------------------
 * Defines extensions to the pure-g grid system.
 * These are NOT responsive extentions.  Responsive
 * extensions should be placed in 
 * grid-responsive-extentions.styl
 */


.pure-u-0
	width 0
	display none

.pure-u-block-0
	display none
	@extend .pure-u-1





/* *************************** *
 * ------- TOUCH GRID -------- *
 * *************************** *
 *
 * Touch-based grid that uses Modernizer's 'touch'
 * class to determine if the grid's styles should
 * be applied or not.
 */


html.touch

	.pure-g-touch
		@extend .pure-g


	.pure-u-touch-0
		@extend .pure-u-0

	.pure-u-touch-1
		@extend .pure-u-1

	.pure-u-touch-1-2
		@extend .pure-u-1-2

	.pure-u-touch-1-3
		@extend .pure-u-1-3

	.pure-u-touch-1-4
		@extend .pure-u-1-4

	.pure-u-touch-1-5
		@extend .pure-u-1-5

	.pure-u-touch-1-6
		@extend .pure-u-1-6


	.pure-u-touch-2-3
		@extend .pure-u-2-3

	.pure-u-touch-2-4
		@extend .pure-u-1-2

	.pure-u-touch-2-5
		@extend .pure-u-2-5

	.pure-u-touch-2-6
		@extend .pure-u-1-3


	.pure-u-touch-3-4
		@extend .pure-u-3-4

	.pure-u-touch-3-5
		@extend .pure-u-3-5

	.pure-u-touch-3-6
		@extend .pure-u-1-2



	.pure-u-touch-4-5
		@extend .pure-u-4-5

	.pure-u-touch-4-6
		@extend .pure-u-2-3


	.pure-u-touch-5-6
		@extend .pure-u-5-6