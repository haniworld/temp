/* FILE: grid-responsive-extensions.styl
 * -------------------------------------
 * This file defines @media query, responsive
 * extensions to the pure-g grid system.
 */


@media $smallScreensQuery

	.pure-u-sm-0
		width 0
		display none

	.pure-u-sm-block-0
		display none
		width 100%

	html.touch
		.pure-u-touch-sm-1
			@extend .pure-u-1

		.pure-u-touch-sm-1-2
			@extend .pure-u-1-2


@media $mediumScreensQuery

	.pure-u-md-0
		width 0
		display none

	.pure-u-md-block-0
		display none
		width 100%



@media $largeScreensQuery

	.pure-u-lg-0
		width 0
		display none

	.pure-u-lg-block-0
		display none
		width 100%