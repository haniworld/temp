/* FILE: overlays.styl
 * -------------------
 * Defines general overlay styles used throughout
 * the site.  Not all overlays have been placed
 * here, so some are still controlled on their
 * respective page styl files.
 */


.overlay
	display none
	cursor pointer
	position fixed
	top 0
	left 0
	z-index 2500 /* Set it over all the bootstrap elements(which is in z-index 2000s) */
	background-color $white
	background-color rgba($white, 0.8)
	height 100%
	width 100%

	&.overlay--black
		background-color $black
		background-color rgba(0,0,0, 0.8)

	&.overlay--gray
		background-color $gray-light
		background-color rgba(#ddd, 0.74)

	.spinner-container
		margin 0 auto
		background #f7f7f7
		position absolute
		left 50%
		top 50%
		margin-left -250px
		margin-top -250px


.pop-up
	display none
	background-color $white
	border-radius 6px
	box-sizing border-box
	box-shadow 0 3px 7px rgba(0, 0, 0, 0.3)
	width 90%
	max-width 600px
	height auto
	position absolute
	top 10%
	left 50%
	margin-left -45%
	padding 2em
	text-align center
	transition 0.4s all ease-in-out
	z-index 2501

	.action-sub
		text-decoration underline

		&:hover
			color $gray-dark
			text-decoration none

	.pop-up-content
		max-width 500px
		margin-left auto
		margin-right auto

	.pop-up-logo
		width 100%
		max-width 220px
		height auto

.pop-up-wrapper
	width 100%
	max-width 600px
	margin auto

@media screen and (min-width: 600px)
	.pop-up
		margin-left -300px