/* marketing
 * ----------------------
 * Styles for the general marketing campaign top banners and Special menus
 */


.promo-banner
	position relative
	z-index 2
	.promo-banner-content
		width 100%
		.promo-banner-img
			display block
			margin auto
			max-width 100%
	a.no-link
		.promo-banner-content
			cursor default
			opacity 1

a.no-link
	cursor default
	color default
/*
 * Fixes for IE8
 */

.ie8
	.promo-banner
		.promo-banner-content
			position relative
			width 100%
			height 164px
			overflow hidden
			.promo-banner-img
				max-width none
			&:hover
				opacity 0.75

@media $mediumScreensQuery

	.promo-banner
		.promo-banner-content
			position relative
			height 164px
			transition opacity 0.3s ease-in-out
			overflow hidden
			&:hover
				cursor pointer
				opacity 0.75
			.promo-banner-img
				max-width none
				/*
					positioning the image in the center of the viewport
				*/
				position: absolute;
				top: 50%;
				left: 50%;
				margin-right: -50%;
				transform: translate(-50%, -50%)