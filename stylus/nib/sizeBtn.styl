sizeBtn()
	display block
	float left
	margin-right 15px
	min-width 54px

	&:first-child
		display none

	a
		background rgb(250,250,250)
		border 1px solid #DDDAD5
		border-radius(3px)
		color #535251
		cursor pointer
		display block
		margin 5px 0 5px 0
		font-size 12px
		padding 1px 2px 2px 2px
		height 19px
		min-width 54px
		text-align center

		&.disabled
			background rgb(245,245,245)
			color #DDDAD5
			cursor default
			&:hover,
			&.active
				background rgb(245,245,245)
				border 1px solid #DDDAD5
				color #DDDAD5
				cursor default


		&:hover,
		&.active
			background-color white
			border-color $highlight
			color $highlight
			text-decoration none
